{
    "manifest_version": 2,
    "name": "Core SERP Vitals",
    "icons": { "128": "icon128.png"},
    "version": "1.0.2",
    "description": "Show the Core Web Vitals data from the Chrome User Experience Report in the Google Search Results.",
    "background": {
        "scripts" : ["background.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "permissions": ["storage", "activeTab", "https://www.google.com/search?*", "https://www.google.co.uk/search?*", "https://www.google.de/search?*", "https://www.google.nl/search?*"]
  }